{# src/Easy/SiteBundle/Resources/views/layout.html.twig #}

<!DOCTYPE HTML>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>=EaSy= Company{% set _title = block('title') %}{% if _title is not empty %} | {{ _title|raw }}{% endif %}</title>
        <link href="{{ asset('bundles/easysite/css/bootstrap.min.css') }}" rel="stylesheet" media="screen">
        <link href="{{ asset('bundles/easysite/css/font-awesome.min.css') }}" rel="stylesheet" media="screen">
        <link href="{{ asset('bundles/easysite/css/main.css') }}" rel="stylesheet" media="screen">
        <link rel="shortcut icon" href="/bundles/easysite/images/favicon.png" />
    </head>
    <body>
        <div class="container">
            <header>
                <a href="{{ path('easy_site_homepage') }}"><img src="/bundles/easysite/images/banniere_{{ random(2) }}.png" class="img-responsive"></a>
            </header>

            {% include "EasySiteBundle::menu.html.twig" %}

            <div class="row">
                <div class="col-xs-4 col-md-3">
                    <div class="panel panel-primary">
                        <div class="panel-heading"><i class="icon-calendar"></i> Evènements</div>
                        <div class="panel-body panel-list-group">
                          <div class="list-group">
                                <a class="list-group-item" href=""><span class="label label-default">Semaine prochaine</span> Réunion</a>
                                <a class="list-group-item" href=""><span class="label label-warning">Demain</span> Entraînement ArmA</a>
                                <a class="list-group-item" href=""><span class="label label-danger">30 minutes</span> Match LcG vs Easy</a>
                                <a class="list-group-item" href=""><span class="label label-success">Hier</span> Fonds</a>
                          </div>
                        </div>
                    </div>
                    <div class="panel panel-primary">
                        <div class="panel-heading"><i class="icon-microphone"></i> Teamspeak</div>
                        <div class="panel-body">
                            {% if not app.debug %}
                                {% include "EasySiteBundle::ts.html.twig" %}
                            {% else %}
                                TS Viewer désactivé en mode dev
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-xs-8 col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            {% if _title is not empty %}<h1>{{ _title|raw }}</h1>{% endif %}

                            {% block body %} {% endblock %}
                        </div>
                    </div>
                </div>
                <div class="col-xs-4 col-md-3">
                    <div class="panel panel-primary">
                        <div class="panel-heading"><i class="icon-user"></i> Connexion</div>
                        <div class="panel-body">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <div class="text-center">
                                    <strong>{{ app.user.username }}</strong>
                                    <br />
                                    GRAVATAR
                                    <br /><br />
                                    <a href="{{ path('fos_user_security_logout') }}" class="btn btn-danger">Se déconnecter</a>
                                </div>
                            {% else %}
                                <div class="text-center">
                                    <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary">Connexion</a>
                                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary">Inscription</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="panel panel-primary">
                        <div class="panel-heading"><i class="icon-signal"></i> Etats des Serveurs</div>
                        <div class="panel-body panel-list-group">
                            {#% include "EasySiteBundle::etats.html.twig" %#}
                        </div>
                    </div>
                    <div class="panel panel-primary">
                        <div class="panel-heading"><i class="icon-beer"></i> Tchat</div>
                        <div class="panel-body">
                            {% if not app.debug %}
                                {% include "EasySiteBundle::tchat.html.twig" %}
                            {% else %}
                                Tchat désactivé en mode dev
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <footer>
                =EaSy= Company &copy; 2008 - {{ "now"|date('Y') }} - <a href="">Mentions Légales</a>
            </footer>
        </div>

        <script src="{{ asset('bundles/easysite/js/jquery-2.0.0.min.js') }}"></script>
        <script src="{{ asset('bundles/easysite/js/bootstrap.min.js') }}"></script>
        <script>
        $(function() {
            $('.tooltip-state').tooltip({
                html: true,
                placement: 'left',
                title: function() {
                    return $(this).attr('data-tooltip');
                }
            });
        });
        </script>
    </body>
</html>
