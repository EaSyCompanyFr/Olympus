{# src/Easy/SiteBundle/Resources/views/Pages/mentions.html.twig #}

{% extends "EasySiteBundle::layout.html.twig" %}

{% block title %}{{ parent() }}Forum{% endblock %}

{% block body %}
    {% for categorie in categories_forums %}
        <table class="table">
            <thead>
                <tr>
                    <th colspan="4">{{ categorie.libelle }}</th>
                </tr>
            </thead>
            <tbody>
                {% for forum in categorie.forums %}
                    <tr>
                        <td style="width: 5%;">
                            <span class="fa fa-star-o"></span>
                        </td>
                        <td style="width: 45%;">{{ forum.libelle }}</td>
                        <td style="width: 20%;">{{ forum.sujets|length }} <span class="fa fa-comment"></span> - x <span class="fa fa-envelope"></span></td>
                        <td style="width: 30%;"><a href="{{ path('easy_forum_forum', { 'id' : forum.id }) }}">TEST</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endfor %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="fa fa-dashboard"></span> Statistiques du Forum
        </div>
        <div class="panel-body">
            <p>
                <span class="fa fa-user"></span> {{ nb_utilisateurs }} membres enregistr√©s<br />
                <span class="fa fa-comment"></span> {{ nb_sujets }} sujets<br />
                <span class="fa fa-envelope"></span> x messages<br />
            </p>
        </div>
    </div>
{% endblock %}