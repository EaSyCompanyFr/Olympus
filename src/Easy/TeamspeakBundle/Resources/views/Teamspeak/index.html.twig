{# src/Easy/TeamspeakBundle/Resources/views/Teamspeak/index.html.twig #}
<ul class="fa-ul">
    {% for client in clients if client.getIcon() != 'client_query' %}
        <li>
            {% if client.getIcon() == 'client_talk' or client.getIcon() == 'client_idle' %}
                <i class="fa-li fa fa-microphone"></i>
            {% elseif client.getIcon() == 'client_away' %}
                <i class="fa-li fa fa-clock-o"></i>
            {% elseif client.getIcon() == 'client_snd_muted' or client.getIcon() == 'client_snd_disabled' or client.getIcon() == 'client_mic_disabled' or client.getIcon() == 'client_mic_muted' %}
                <i class="fa-li fa fa-microphone-slash"></i>
            {% elseif client.getIcon() == 'client_cc_talk' or client.getIcon() == 'client_cc_idle' %}
                <i class="fa-li fa fa-certificate"></i>
            {% else %}
                {{ client.getIcon() }}
            {% endif %}
            {{ client }}
        </li>
    {% endfor %}
</ul>