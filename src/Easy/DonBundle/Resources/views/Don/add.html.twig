{# src/Easy/DonBundle/Resources/views/Don/add.html.twig #}
 
{% extends "EasyEspaceMembreBundle::layout.html.twig" %}

{% block title %}Dons{% endblock %}
 
{% block body %}
    <div class="page-header">
        <h1>Ajout d'un Don</h1>
    </div>
    <div>
        <form role="form">
            <div class="form-group">
                <label for="utilisateur">Utilisateur</label>
                <select class="form-control" name="utilisateur">
                    {% for utilisateur in utilisateurs %}
                        <option id="{{utilisateur.id}}">{{utilisateur.username}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="moyen">Moyen de Paiement</label>
                <select class="form-control" name="moyen">
                    {% for moyenPaiement in moyensPaiement %}
                        <option id="{{moyenPaiement.id}}">{{moyenPaiement.libelle}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="montant">Montant</label>
                <input type="text" name="montant" class="form-control" placeholder="Montant en â‚¬">
            </div>
        <button type="submit" class="btn btn-default">Envoyer</button>
        </form>
    </div>

{% endblock %}